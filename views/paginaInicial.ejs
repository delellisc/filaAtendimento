    <script>
        let selectedSpeciality = null;
        function openPatientIdModal(speciality) {
            selectedSpeciality = speciality;
            const patientIdModal = new bootstrap.Modal(document.getElementById('patientIdModal'));
            patientIdModal.show();
        }
        document.getElementById('submitPatientId').addEventListener('click', function() {
            const patientId = document.getElementById('patientIdInput').value;
            if (patientId) {
                window.location.href = `/users/${selectedSpeciality}/${patientId}`;
            } else {
                alert('Por favor, insira o ID do paciente.');
            }
        });
        function createSpecialityCard(speciality) {
            const container = document.getElementById('specialitiesContainer');
            const specialityData = {
                Cardiologia: {
                    img: "https://cardiologia.pro/wp-content/uploads/2017/10/fibrilacao-atrial-fa-cardiologista-sao-paulo-930x620.jpg",
                    description: "Cuida da saúde do seu coração com os melhores especialistas."
                },
                Ortopedia: {
                    img: "https://img.freepik.com/vetores-premium/simbolos-ortopedicos-e-de-esqueleto-conjunto-de-articulacoes-e-ossos-humanos-vetor_124894-900.jpg",
                    description: "Tratamentos para ossos e articulações com tecnologia avançada."
                },
                Oftalmologia: {
                    img: "https://img.freepik.com/vetores-premium/ilustracao-de-oftalmologia-desenhos-animados-do-medico-oftalmologista-oculista-verificando-examinando-a-saude-dos-olhos-do-paciente-com-teste-de-grafico-de-snellen-exame-clinico-clinico-isolado_213110-515.jpg",
                    description: "Cuide da saúde dos seus olhos com nossos especialistas."
                },
                Psiquiatria: {
                    img: "https://hospitalprontoclinica.com.br/wp-content/uploads/2020/10/Design-sem-nome-2023-10-24T131524.376.jpg",
                    description: 'Saúde mental em primeiro lugar. Conte com nossa equipe.'
                },
                Psicologia: {
                    img: "https://www.seminariommi.com.br/wp-content/uploads/2023/06/entrevista-psicologica.jpg",
                    description: "Apoio emocional e terapia com os melhores médicos de nossa equipe."
                },
                Nutrição: {
                    img: "https://img.freepik.com/free-vector/choosing-healthy-unhealthy-food_23-2148634841.jpg",
                    description: "Planejamento alimentar para uma vida saudável."
                },
                Pediatria: {
                    img: "https://img.freepik.com/free-vector/teacher-checking-children-temperature_23-2148691626.jpg",
                    description: 'Cuidados médicos especializados para crianças e adolescentes.'
                },
                Dermatologia: {
                    img: "https://img.freepik.com/free-vector/tiny-dermatologist-examining-dry-face-skin-flat-vector-illustration-abstract-epidermis-disease-diagnostics-treatment-dermatology-health-medical-protection-cosmetology-concept_74855-10167.jpg",
                    description: "Tratamento especializado para a saúde da sua pele."
                },
                Neurologia: {
                    img: "https://img.freepik.com/free-vector/brain-chemistry-concept-illustration_114360-13526.jpg",
                    description: "Cuidados e tratamentos avançados para o sistema nervoso."
                }
            };
            const imgSrc = specialityData[speciality]?.img || 'https://via.placeholder.com/300x200?text=Especialidade';
            const description = specialityData[speciality]?.description || 'Descrição da especialidade.';
            const cardHTML = `
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="${imgSrc}" class="card-img-top img-fluid" alt="${speciality}" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">${speciality}</h5>
                            <p class="card-text">${description}</p>
                            <a href="#" class="btn btn-primary stretched-link" onclick="openPatientIdModal('${speciality}')">Consultar Fila</a>
                        </div>
                    </div>
                </div>
            `;
            container.innerHTML += cardHTML;
        }
        function fetchAvailableSpecialities() {
            fetch('/admin/showAppointments')
                .then(response => response.json())
                .then(data => {
                    data.forEach(atendimento => {
                        const speciality = atendimento.especialidade;
                        createSpecialityCard(speciality);
                    });
                })
                .catch(error => console.error('Error fetching available specialities:', error));
        }
        fetchAvailableSpecialities();
    </script>


