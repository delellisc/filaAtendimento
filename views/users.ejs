<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <h1><%= title %></h1>
    <p id="position">Carregando sua posição na fila...</p>
    <script>
        const id = <%= pacienteId %>;
        const esp = '<%= especialidade %>';
        async function fetchPosition() {
            await fetch(`/users/checkPosition/${esp}/${id}`)
            .then(response => response.text())
            .then(text => {
            // solucionar erro abaixo
            // quando dá undefined cai nesse condicional
            if (text) {
                if (text == '1'){
                    document.getElementById("position").innerHTML = 'Você é o próximo!';
                }
                else{
                    document.getElementById("position").innerHTML = `Você é o ${text}º na fila!`;
                }
            }
            else{
                document.getElementById("position").innerHTML = 'Paciente não encontrado';
            }})
            .catch(error => {
                console.error('Error fetching position:', error);
                document.getElementById("position").innerHTML = 'Erro ao verificar posição';
            })};
        setInterval(fetchPosition, 3000);
        fetchPosition();
    </script>
</body>
</html>